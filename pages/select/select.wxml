<scroll-view class='body'>
  <image style="width: 100%; height: 100%" mode="scaleToFill" src="../../images/3.jpg"></image>
  <view class='note' bindtap='noteHandle'></view>
<view class='ok flex'>
<image wx:if="{{id !== ''}}" style="width: 55%; height: 55%" mode="aspectFit" src="../../images/ok.png"></image>
</view>
  <view class='next' bindtap='nextHandle'></view>

  <view class='man' bindtap='selectHandle' data-id='1'></view>
  <view class='showMan' wx:if="{{show[1]}}" bindtap='selectHandle' data-id='1'></view>
  <view class='woman' bindtap='selectHandle' data-id='2'></view>
  <view class='showWoman' wx:if="{{show[0]}}" bindtap='selectHandle' data-id='2'></view>

  <import src="../../template/note/note" />
  <template is="note" data="{{display,height,width,left,top}}" />
</scroll-view>